@model Record

<h1>Create Record</h1>
<div class="card bg-primary card-form">
	<div class="card-body">
		<form method="post" action="">
			<div class="form-group">
				<label asp-for="Title" class="text-light"></label>
				<input type="text" asp-for="Title" class="form-control form-control-lg" placeholder="Title" />
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>
			<div class="form-group">
				<div class="custom-control custom-checkbox">
					<input asp-for="IsCompleted" type="checkbox" class="custom-control-input" id="customCheck1">
					<label asp-for="IsCompleted" class="custom-control-label text-light" for="customCheck1">This task is completed</label>
				</div>
			</div>
			<button class="btn btn-outline-light btn-block">Create Record</button>
		</form>
	</div>
</div>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}